<div class="sidebar">
  <div class="sidebar-wrapper">
    <div class="logo">

      <a href="https://www.ucdproperties.com" class="simple-text">
        <%= image_tag "ucd-logo.png", class: "logo ucd-logo" %>
        UCD Properties
      </a>
    </div>
    <ul class="nav">
      <li>
        <%= link_to admin_root_path, class: "nav-link" do %>
          <i class="fa fa-dashboard"></i>
          <p>Dashboard</p>
        <% end %>
      </li>

      <li>
        <%= link_to new_admin_property_path, class: "nav-link" do %>
          <i class="fa fa-plus"></i>
          <p>Add Property</p>
        <% end %>
      </li>

      <li class="dropdown">
        <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown" aria-expanded="false">
          <i class="fa fa-home"></i>
          <span>Properties</span>
        </a>
        <ul class="dropdown-menu">
          <%= link_to admin_properties_path(type: 'rent'), class: "dropdown-item" do %>
            <i class="fa fa-home"></i>
            <span>For Rent</span>
          <% end %>

          <%= link_to admin_properties_path(type: 'sale'), class: "dropdown-item" do %>
            <i class="fa fa-shopping-cart"></i>
            <span>For Sale</span>
          <% end %>
        </ul>
      </li>
    </ul>
  </div>
</div>
